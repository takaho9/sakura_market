<div class="card mt-4">
  <div class="card-header text-center">
    <h3>プロフィールの編集</h3>
  </div>
  <div class="card-body">
    <%= simple_form_for current_user, url: user_path, data: { turbo_method: :patch } do |f| %>
      <div class="mb-3">
        <%= f.input :last_name, label: "姓", input_html: { class: "form-control" } %>
      </div>

      <div class="mb-3">
        <%= f.input :first_name, label: "名", input_html: { class: "form-control" } %>
      </div>

      <div class="mb-3">
        <%= f.input :postal_code, label: "郵便番号", input_html: { class: "form-control" } %>
      </div>

      <div class="mb-3">
        <%= f.input :address, label: "住所", input_html: { class: "form-control" } %>
      </div>

      <div class="text-center">
        <%= f.button :submit, "保存", class: "btn btn-success" %>
        <%= link_to 'キャンセル', user_path, class: 'btn btn-secondary ms-2' %>
      </div>
    <% end %>
  </div>
</div>
